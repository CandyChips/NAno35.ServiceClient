@using Microsoft.AspNetCore.Authorization
@using Nano35.Contracts.Instance.Models
@using Nano35.HttpContext.instance
@using Nano35.WebClient.Helpers
@using Nano35.WebClient.Services
@attribute [Authorize]
@layout InstanceLayout
@inject NavigationManager NavigationManager;
@inject IInstanceService InstanceService;
@inject IRequestManager RequestManager
@inject ISessionProvider SessionProvider
@inject HttpClient HttpClient
@inject IAuthService AuthService
@page "/instance/workers"

<LoadingContent IsLoaded="_loading">
    <RadzenHeading Text="Сотрудники"/>
    <RadzenButton Click=@(_ => NewWorker())
                  Text="Создать"
                  Style="margin: 1rem 0;"
                  ButtonStyle="ButtonStyle.Primary"/>
    <RadzenGrid Data="@_data"
                EmptyText="Добавте новых сотрудников..."
                TItem="WorkerViewModel">
        <Columns>
            <RadzenGridColumn TItem="WorkerViewModel"
                              Property="Name" 
                              Title="ФИО" />
            <RadzenGridColumn TItem="WorkerViewModel"
                              Property="Email" 
                              Title="Почта" 
                              Width="200px">
                <Template Context="item">
                    @(item.Email == "" ? "Не указан" : item.Email)
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="WorkerViewModel"
                              Property="Phone" 
                              Title="Телефон"
                              Width="150px">
                <Template Context="item">
                    +7@(item.Phone)
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="WorkerViewModel"
                              Context="order"
                              Bubble="false"
                              Width="200"
                              TextAlign="TextAlign.Center">
                <Template Context="item">
                    <RadzenButton Text="Оповестить в мессенджере"
                                  Size="ButtonSize.Small"
                                  Disabled="true"
                                  ButtonType="ButtonType.Button"
                                  ButtonStyle="ButtonStyle.Info"
                                  Click="@(_ => { })">
                    </RadzenButton>
                    @if (_roles.Contains(RolesHelper.Manager) || _roles.Contains(RolesHelper.Admin))
                    {
                        <RadzenButton Text="Выплатить ЗП"
                                      Size="ButtonSize.Small"
                                      Disabled="true"
                                      ButtonType="ButtonType.Button"
                                      ButtonStyle="ButtonStyle.Info"
                                      Click="@(_ => NewWage(item))">
                        </RadzenButton>
                    }
                </Template>
            </RadzenGridColumn>
        </Columns>
    </RadzenGrid>
</LoadingContent>

@code
{
    private IEnumerable<WorkerViewModel> _data;
    private bool _loading;
    [CascadingParameter] public IModalService Modal { get; set; }
    private List<Guid> _roles = new();
    
    protected override async Task OnInitializedAsync()
    {       
        _loading = false;
        _roles = await AuthService.GetCurrentRoles();
        _data = (await new HttpGetRequest<GetAllWorkersHttpResponse>(HttpClient, $"{RequestManager.InstanceServer}/Workers?InstanceId={await SessionProvider.GetCurrentInstanceId()}").GetAsync()).Workers;
        _loading = true;
    }
    
    private async Task NewWorker()
    {
        var modalOpts = new ModalOptions()
        {
            DisableBackgroundCancel = true, FocusFirstElement = true
        };
        var modal = Modal.Show<WorkerForm>("Новый Сотрудник", modalOpts);
        await modal.Result;
        _loading = false;
        _data = (await new HttpGetRequest<GetAllWorkersHttpResponse>(HttpClient, $"{RequestManager.InstanceServer}/Workers?InstanceId={await SessionProvider.GetCurrentInstanceId()}").GetAsync()).Workers;
        _loading = true;
    }
    
    private async Task NewWage(WorkerViewModel user)
    {
        var modalOpts = new ModalOptions()
        {
            DisableBackgroundCancel = true, FocusFirstElement = true
        };
        var parameters = new ModalParameters();
        parameters.Add(nameof(WorkersWageCreate.UserId), user.Id);
        var currentUnit = (await new HttpGetRequest<GetUnitByIdHttpResponse>(HttpClient, $"{RequestManager.InstanceServer}/Units/{await SessionProvider.GetCurrentUnitId()}").GetAsync()).Data.Name;
        var modal = Modal.Show<WorkersWageCreate>($"Выплата заработной платы из кассы: {currentUnit}", parameters, modalOpts);
        await modal.Result;
        _loading = false;
        _data = (await new HttpGetRequest<GetAllWorkersHttpResponse>(HttpClient, $"{RequestManager.InstanceServer}/Workers?InstanceId={await SessionProvider.GetCurrentInstanceId()}").GetAsync()).Workers;
        _loading = true;    }
}
