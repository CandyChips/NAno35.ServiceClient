@attribute [Authorize]
@layout InstanceLayout
@page "/instance/repairs/my"
@using Microsoft.AspNetCore.Authorization
@using Nano35.Contracts.Repair.Models
@using Nano35.HttpContext.instance
@using Nano35.HttpContext.Repair
@using Nano35.WebClient.Services
@inject IRequestManager RequestManager
@inject ISessionProvider SessionProvider
@inject HttpClient HttpClient
@inject HealthService HealthService
@inject NavigationManager NavigationManager
@inject HttpGet GetRequest

<LoadingContent IsLoaded="_isLoaded">
    <RadzenHeading Text="Мои активные заказы на ремонт"/>
    <RadzenGrid EmptyText="Нет оприходований." AllowPaging="true" PageSize="10" Data="@_data" TItem="RepairOrderViewModel">
        <Columns>
            <RadzenGridColumn TItem="RepairOrderViewModel" Property="LastState.Comment" Title="Статус"/>
            <RadzenGridColumn TItem="RepairOrderViewModel" Property="Client" Title="Клиент"/>
            <RadzenGridColumn TItem="RepairOrderViewModel" Property="Device" Title="Изделие"/>
            <RadzenGridColumn TItem="RepairOrderViewModel" Bubble="false" TextAlign="TextAlign.Center" Width="200px">
                <Template Context="item">
                    <RadzenButton Click=@(_ => DetailsOpen(item.Id)) Text="Информация" ButtonStyle="ButtonStyle.Secondary"/>
                </Template>
            </RadzenGridColumn>
        </Columns>
    </RadzenGrid>
</LoadingContent>

@code {
    private bool _isLoaded;
    private List<RepairOrderViewModel> _data;
    [CascadingParameter] BlazoredModalInstance ModalInstance { get; set; }
    [CascadingParameter] public IModalService Modal { get; set; }
    
    protected override async Task OnInitializedAsync()
    {
        _isLoaded = false;
        _data = await GetAllRepairOrders();        
        _isLoaded = true;        
    }
    
    private async Task<List<RepairOrderViewModel>> GetAllRepairOrders()
    {
        var data = new List<RepairOrderViewModel>(); 
        await GetRequest.InvokeAsync<GetAllRepairOrdersHttpResponse>(
            RequestManager.RepairOrdersServer, $"RepairOrders?InstanceId={await SessionProvider.GetCurrentInstanceId()}",
            resp =>
            {
                if (resp.IsSuccess()) {data = resp.Success.Data;}
                else
                {
                    Console.WriteLine(resp.Error);
                    NavigationManager.NavigateTo("/instance-view");
                }
            });
        return data;
    }

    private async Task DetailsOpen(Guid id)
    {
        var modalOpts = new ModalOptions(){DisableBackgroundCancel = true, FocusFirstElement = true};
        var parameters = new ModalParameters();
        parameters.Add(nameof(RepairOrdersDetail.Id), id);
        var modal = Modal.Show<RepairOrdersDetail>($"Заказ наряд", parameters, modalOpts);
        await modal.Result;      
        _isLoaded = false;
        _data = await GetAllRepairOrders();        
        _isLoaded = true;
    }
    
    private async Task NewOrder()
    {
        var modalOpts = new ModalOptions(){DisableBackgroundCancel = true, FocusFirstElement = true};
        var modal = Modal.Show<RepairOrdersCreateForm>("Новый наряд", modalOpts);
        await modal.Result;
        _isLoaded = false;
        _data = await GetAllRepairOrders();        
        _isLoaded = true;
    }

}