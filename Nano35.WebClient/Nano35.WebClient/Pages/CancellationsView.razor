@using Microsoft.AspNetCore.Authorization
@using Nano35.HttpContext.storage
@using Nano35.WebClient.Services
@attribute [Authorize]
@layout InstanceLayout
@page "/instance/cancellations"
@inject IRequestManager RequestManager
@inject ISessionProvider SessionProvider
@inject HttpClient HttpClient

@if (_loading)
{
    <div class="d-flex justify-content-center" style="margin-top: 5rem">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden"></span>
        </div>
    </div>
}
else
{
    <RadzenHeading Text="Списания"/>
    
    <RadzenButton Click=@(_ => NewCancellation()) 
                  Text="Создать"
                  Style="margin: 1rem 0;"
                  ButtonStyle="ButtonStyle.Primary"/>
    
    <RadzenGrid AllowFiltering="true" 
                FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive"
                FilterMode="FilterMode.Advanced" 
                AllowPaging="true"
                PageSize="10"
                AllowSorting="true" 
                Data="@_data"
                TItem="CancellationViewModel">
        <Columns>
            <RadzenGridColumn TItem="CancellationViewModel"
                              Property="Number" 
                              Filterable="false"
                              Sortable="false"
                              Title="Номер" />
            <RadzenGridColumn TItem="CancellationViewModel" 
                              Property="Date" 
                              Filterable="false"
                              Sortable="false"
                              Title="Дата" />
            <RadzenGridColumn TItem="CancellationViewModel" 
                              Property="Unit" 
                              Filterable="false"
                              Sortable="false"
                              Title="Подразделение" />
            <RadzenGridColumn TItem="CancellationViewModel"
                              Filterable="false"
                              Sortable="false"
                              Title="Дата">
                <Template Context="item">
                    @item.Date.ToString("dd-MM-yyyy hh:mm")
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="CancellationViewModel" 
                              Filterable="false"
                              Sortable="false"
                              Width="130px">
                <Template Context="item">
                    <RadzenButton Click=@(_ => OpenCancellation(item)) 
                                  Text="Информация"
                                  Size="ButtonSize.Small"
                                  Style="margin: 1rem 0;"
                                  ButtonStyle="ButtonStyle.Primary"/>
                </Template>
            </RadzenGridColumn>
        </Columns>
    </RadzenGrid>
}

@code
{
    private IEnumerable<CancellationViewModel> _data;
    private bool _loading = true;
    [CascadingParameter] public IModalService Modal { get; set; }
    [CascadingParameter] BlazoredModalInstance ModalInstance { get; set; }


    protected override async Task OnInitializedAsync()
    {
        _loading = true;
        _data = await GetAllCancellations();
        _loading = false;
    }
    
    private async Task<IEnumerable<CancellationViewModel>> GetAllCancellations() =>
        (await (new GetAllCancellationsRequest(RequestManager, HttpClient, new GetAllCancellationsHttpQuery() { UnitId = await SessionProvider.GetCurrentUnitId(), InstanceId = await SessionProvider.GetCurrentInstanceId() })).Send()).Data;

    private async void NewCancellation()
    {
        Modal.Show<CancellationsCreate>("Новое списание");
        
        _data = (await (new GetAllCancellationsRequest(RequestManager, HttpClient, new GetAllCancellationsHttpQuery() {UnitId = await SessionProvider.GetCurrentUnitId(), InstanceId = await SessionProvider.GetCurrentInstanceId(), })).Send()).Data;}


    private async Task OpenCancellation(CancellationViewModel coming)
    {
        var parameters = new ModalParameters();
        parameters.Add(nameof(CancellationsDetails.Cancellation), coming);
        var modal = Modal.Show<CancellationsDetails>($"Списание", parameters);
        await modal.Result;
        _data = (await (new GetAllCancellationsRequest(RequestManager, HttpClient, new GetAllCancellationsHttpQuery() {UnitId = await SessionProvider.GetCurrentUnitId(), InstanceId = await SessionProvider.GetCurrentInstanceId(), })).Send()).Data;}
}
