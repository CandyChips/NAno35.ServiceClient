@using Nano35.WebClient.Services
@using Nano35.HttpContext.storage
@inject HttpClient HttpClient 
@inject IRequestManager RequestManager 
@inject ISessionProvider SessionProvider

<LoadingContent IsLoaded="_isLoaded">
    <EditForm Model="@Model" OnValidSubmit="HandleValidSubmit">
        <DataAnnotationsValidator />
        <InputField Title="Категория">
            <Controls><ArticlesFormCategory @bind-Value="Model.CategoryId"/></Controls>
            <Validation><ValidationMessage For="@(() => Model.CategoryId)" /></Validation>
        </InputField>
        <InputField Title="Бренд">
            <Controls></Controls>
            <Validation></Validation>
        </InputField>
        <InputField Title="Модель">
            <Controls><RadzenTextBox Style="width: 100%;" @bind-Value="Model.Brand"/></Controls>
            <Validation><ValidationMessage For="@(() => Model.Brand)" /></Validation>
        </InputField>
        <InputField Title="Бренд">
            <Controls><RadzenTextBox Style="width: 100%;" @bind-Value="Model.Model"/></Controls>
            <Validation><ValidationMessage For="@(() => Model.Model)" /></Validation>
        </InputField>
        <ConditionalContent IsLoaded="IsExpandedView">
            <AllowedContent>
                <InputField Title="Описание">
                    <Controls><RadzenTextBox Style="width: 100%;" @bind-Value="Model.Info"/></Controls>
                    <Validation><ValidationMessage For="@(() => Model.Info)" /></Validation>
                </InputField>
                <InputField Title="Харрактеристики">
                    <Controls><ArticlesFormSpecification @bind-Value="Model.Specs"/></Controls>
                    <Validation><ValidationMessage For="@(() => Model.Specs)"/></Validation>
                </InputField>
                @foreach (var item in Model.Specs)
                {
                    <li class="list-group-item">@item.Key : @item.Value</li>
                }
            </AllowedContent>
        </ConditionalContent>
        <RadzenButton type="submit" Text="Создать" ButtonStyle="ButtonStyle.Primary" Style="width: 100%" />
        <ConditionalContent IsLoaded="!string.IsNullOrEmpty(Error)">
            <AllowedContent>
                <div class="alert alert-danger mt-3 mb-0">@Error</div>
            </AllowedContent>
        </ConditionalContent>
    </EditForm>
</LoadingContent>

@code
{
    [CascadingParameter] BlazoredModalInstance ModalInstance { get; set; }
    [Parameter] public bool IsExpandedView { get; set; } = true;
    [Parameter] public CreateArticleHttpBody Model { get; set; }
    [Parameter] public EventCallback FormSubmitted { get; set; }
    [Parameter] public string Error { get; set; }
    private bool _isLoaded;
    
    protected override async Task OnInitializedAsync()
    {
        Model.Specs = new List<SpecHttpContext>();
        _isLoaded = true;
    }

    private async Task HandleValidSubmit()
    {
        await FormSubmitted.InvokeAsync();
        await ModalInstance.CloseAsync();
    }
}