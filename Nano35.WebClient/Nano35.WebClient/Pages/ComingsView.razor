@using Microsoft.AspNetCore.Authorization
@using Nano35.HttpContext.storage
@using Nano35.WebClient.Services
@attribute [Authorize]
@layout InstanceLayout
@page "/instance/coming"
@inject IRequestManager RequestManager
@inject IComingsService ComingsService
@inject ISessionProvider SessionProvider

@if (_loading)
{
    <div class="d-flex justify-content-center" style="margin-top: 5rem; margin-bottom: 5rem">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden"></span>
        </div>
    </div>
}
else
{
    <RadzenHeading Text="Оприходования"/>
    
    <RadzenButton Click=@(_ => NewComing()) 
                  Text="Создать"
                  Style="margin: 1rem 0;"
                  ButtonStyle="ButtonStyle.Primary"/>
    
    <RadzenGrid AllowFiltering="true" 
                FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive"
                FilterMode="FilterMode.Advanced" 
                AllowPaging="true"
                PageSize="10"
                AllowSorting="true"
                EmptyText="Нет оприходований."
                Data="@_data"
                TItem="ComingViewModel">
        <Columns>
            <RadzenGridColumn TItem="ComingViewModel" 
                              Property="Number"
                              Filterable="false"
                              Sortable="false"
                              Title="Номер" />
            <RadzenGridColumn TItem="ComingViewModel"
                              Filterable="false"
                              Sortable="false"
                              Title="Дата">
                <Template Context="item">
                    @item.Date.ToString("dd-MM-yyyy hh:mm")
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="ComingViewModel"
                              Filterable="false"
                              Sortable="false"
                              Property="Unit" 
                              Title="Подразделение" />
            <RadzenGridColumn TItem="ComingViewModel"
                              Filterable="false"
                              Sortable="false"
                              Property="Client" 
                              Title="Клиент" />
            <RadzenGridColumn TItem="ComingViewModel" 
                              Filterable="false"
                              Sortable="false"
                              Width="130px"
                              Title="Цена">
                <Template Context="item">
                    @item.Cash руб.
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="ComingViewModel" 
                              Filterable="false"
                              Sortable="false"
                              TextAlign="TextAlign.Center">
                <Template Context="item">
                    <RadzenButton Click=@(_ => OpenComing(item)) 
                                  Text="Информация"
                                  Size="ButtonSize.Small"
                                  Style="margin: 1rem 0;"
                                  ButtonStyle="ButtonStyle.Primary"/>
                    <a href="http://192.168.100.210:30006/StorageItems/GenerateComingDocument?comingId=@item.Id.ToString()" target="_blank">Документ</a>
                </Template>
            </RadzenGridColumn>
        </Columns>
    </RadzenGrid>
    
}

@code
{
    private IEnumerable<ComingViewModel> _data;
    private bool _loading = true;
    [CascadingParameter] public IModalService Modal { get; set; }

    protected override async Task OnInitializedAsync()
    {
        _data = (await ComingsService.GetAllComings(await SessionProvider.GetCurrentInstanceId())).Data;
        _loading = false;
    }

    private async void NewComing()
    {
        var tmp = Modal.Show<ComingsCreate>("Новое оприходование");
        await tmp.Result;
        _data = (await ComingsService.GetAllComings(await SessionProvider.GetCurrentInstanceId())).Data;
    }

    private async Task OpenComing(ComingViewModel coming)
    {
        var parameters = new ModalParameters();
        parameters.Add(nameof(ComingsDetails.Coming), coming);
        var modal = Modal.Show<ComingsDetails>($"Оприходование", parameters);
        await modal.Result;
        _data = (await ComingsService.GetAllComings(await SessionProvider.GetCurrentInstanceId())).Data;
    }
}
