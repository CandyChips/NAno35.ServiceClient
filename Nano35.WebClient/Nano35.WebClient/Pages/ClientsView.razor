@using Microsoft.AspNetCore.Authorization
@using Nano35.Contexts.Http.Instance
@using Nano35.Contracts.Instance.Models
@using Nano35.WebClient.Helpers
@using Nano35.WebClient.Services
@attribute [Authorize]
@page "/instance/clients"
@layout InstanceLayout
@inject NavigationManager NavigationManager
@inject RequestManager RequestManager
@inject ISessionProvider SessionProvider
@inject IAuthService AuthService
@inject HttpClient HttpClient
@inject HttpGet GetRequest

<LoadingContent IsLoaded="_isLoaded">
    <RadzenHeading Text="Клиентская база"/>
    <RadzenButton Click="@(_ => OpenCreateClient())" Text="Создать" Style="margin: 1rem 0;" ButtonStyle="ButtonStyle.Primary"/>
    <RadzenGrid EmptyText="Добавте своих первых клиентов..." AllowPaging="true" PageSize="10" Data="@_data" TItem="ClientViewModel">
        <Columns>
            <RadzenGridColumn TItem="ClientViewModel" TextAlign="TextAlign.Left" Property="Name" Title="Фио" />
            <RadzenGridColumn TItem="ClientViewModel" TextAlign="TextAlign.Center" Property="Email" Title="Почта" />
            <RadzenGridColumn TItem="ClientViewModel" TextAlign="TextAlign.Center" Property="Phone" Title="Телефон">
                <Template Context="item">
                    +7@(item.Phone)
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="ClientViewModel" TextAlign="TextAlign.Center" Property="ClientState" Title="Статус Клиента" />
            @if (_roles.Contains(RolesHelper.Manager) || _roles.Contains(RolesHelper.Admin))
            {
                <RadzenGridColumn TItem="ClientViewModel" TextAlign="TextAlign.Center" Bubble="false" Width="200px">
                    <Template Context="item">
                        <RadzenButton Click=@(_ => OpenClient(item)) Text="Изменить" Size="ButtonSize.Small" ButtonStyle="ButtonStyle.Secondary" />
                    </Template>
                </RadzenGridColumn>
            }
        </Columns>
    </RadzenGrid>
</LoadingContent>


@code
{
    
    [CascadingParameter] public IModalService Modal { get; set; }
    [CascadingParameter] BlazoredModalInstance ModalInstance { get; set; }
    
    private bool _isLoaded;
    private List<ClientViewModel> _data;
    private List<Guid> _roles = new();
    
     protected override async Task OnInitializedAsync()
     {        
         _isLoaded = false;
         _roles = await AuthService.GetCurrentRoles();
         await GetData();
         _isLoaded = true;
    }

    private async Task GetData()
    {
        await GetRequest.InvokeAsync<GetAllClientsHttpResponse>(
            $"instance/Clients?InstanceId={await SessionProvider.GetCurrentInstanceId()}",
            resp =>
            {
                if (resp.IsSuccess())
                {
                    _data = resp.Success.Data;
                }
                else
                {
                    NavigationManager.NavigateTo("/instance-view");
                }
            });
        
        StateHasChanged();
    }
    
    private async Task OpenCreateClient()
    {
        var opts = new ModalOptions()
        {
            DisableBackgroundCancel = true,
            FocusFirstElement = true
        };
        var modal = Modal.Show<ClientsCreateForm>("Новый клиент", opts);
        await modal.Result;
        _isLoaded = false;
        await GetData();       
        _isLoaded = true;
    }

    private async Task OpenClient(ClientViewModel value)
    {
        var parameters = new ModalParameters();
        parameters.Add(nameof(ClientDetails.Item), value);
        var modal = Modal.Show<ClientDetails>($"{value.Name}", parameters);
        await modal.Result;
        _isLoaded = false;
        await GetData();
        _isLoaded = true;
    }
}
