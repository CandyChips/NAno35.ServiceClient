@inject TooltipService tooltipService
<RadzenButton @ref="radzenButton" Icon="help_outline" Click="@(args => ShowTooltip(radzenButton.Element,Text))" Style=" margin-left: 5px;
                                                                                                                        margin-right: 5px;
                                                                                                                        background-color: white;
                                                                                                                        color: black; 
                                                                                                                        padding-left: 0px;
                                                                                                                   padding-right: 0px;"/>
<style> 
.rz-button-md .rzi{
    font-size: x-large;
}
</style>

@functions {
    [Parameter] public string Text { get; set; }
    private RadzenButton radzenButton;
    
    private async Task ShowTooltip(ElementReference elementReference, string text, TooltipOptions options = null) => tooltipService.Open(elementReference, text, options);

}