@using Microsoft.AspNetCore.Authorization
@using Nano35.HttpContext.instance
@using Nano35.HttpContext.storage
@using Nano35.WebClient.Services
@attribute [Authorize]
@layout InstanceLayout
@page "/instance/storage/moves"
@inject IRequestManager RequestManager
@inject ISessionProvider SessionProvider
@inject HttpClient HttpClient
@inject NotificationService NotificationService

<LoadingContent IsLoaded="_loading">
    <RadzenHeading Text="Перемещения"/>
    <RadzenButton Click=@(_ => NewMove()) Text=" Создать" Style="margin: 1rem 0;" ButtonStyle="ButtonStyle.Primary"/>
    <RadzenGrid AllowPaging="true"
                PageSize="10"
                Data="@_data"
                TItem="MoveViewModel">
        <Columns>
            <RadzenGridColumn TItem="MoveViewModel" Property="Number" Title="Номер" />
            <RadzenGridColumn TItem="MoveViewModel" Property="Date" Title="Дата" />
            <RadzenGridColumn TItem="MoveViewModel" Property="ToUnit" Title="Подразделение получатель" />
            <RadzenGridColumn TItem="MoveViewModel" Property="FromUnit" Title="Подразделение отправитель" />
            <RadzenGridColumn TItem="MoveViewModel" Width="130px">
                <Template Context="item">
                    <RadzenButton Click=@(_ => OpenMove(item)) 
                                  Text="Информация"
                                  Size="ButtonSize.Small"
                                  Style="margin: 1rem 0;"
                                  ButtonStyle="ButtonStyle.Primary"/>
                </Template>
            </RadzenGridColumn>
        </Columns>
    </RadzenGrid>
</LoadingContent>

@code
{
    private List<MoveViewModel> _data;
    private bool _loading;
    [CascadingParameter] public IModalService Modal { get; set; }

    protected override async Task OnInitializedAsync()
    {
        _loading = false;
        _data = await GetAllMoves();
        _loading = true;
    }

    private async Task<List<MoveViewModel>> GetAllMoves() =>
        (await new HttpGetRequest<GetAllMovesSuccessHttpResponse>(HttpClient, NotificationService,$"{RequestManager.StorageServer}/Moves?InstanceId={await SessionProvider.GetCurrentInstanceId()}").GetAsync()).Data;
    
    private async Task NewMove()
    {
        var modal = Modal.Show<MovesCreate>("Новое списание");
        await modal.Result;
        _loading = false;
        _data = await GetAllMoves();
        _loading = true;
    }

    private async Task OpenMove(MoveViewModel value)
    {
        var parameters = new ModalParameters();
        parameters.Add(nameof(MovesDetails.Move), value);
        var modal = Modal.Show<MovesDetails>($"Перемещение", parameters);
        await modal.Result;
        _loading = false;
        _data = await GetAllMoves();
        _loading = true;
    }
}
