@using Microsoft.AspNetCore.Authorization
@using Nano35.WebClient.Services
@using Append.Blazor.Printing
@using Nano35.Contexts.Http.storage
@using Nano35.WebClient.Helpers
@attribute [Authorize]
@layout InstanceLayout
@page "/instance/storage/sells"
@inject RequestManager RequestManager
@inject ISessionProvider SessionProvider
@inject HttpClient HttpClient
@inject IPrintingService PrintingService
@inject NotificationService NotificationService
@inject HealthService HealthService
@inject NavigationManager NavigationManager
@inject IAuthService AuthService
@inject HttpGet GetRequest


<LoadingContent IsLoaded="_loading">
    
    <RadzenHeading Text="Продажи"/>
    
    @if (_roles.Contains(RolesHelper.Storage) || _roles.Contains(RolesHelper.Admin))
    {
        <RadzenButton Click=@(_ => NewSelle()) 
                      Text="Создать"
                      Style="margin: 1rem 0;"
                      ButtonStyle="ButtonStyle.Primary"/>
    }
    
    
    <RadzenGrid EmptyText="Нет оприходований." AllowPaging="true" PageSize="10" Data=@(_data) TItem="SelleViewModel">
        <Columns>
            <RadzenGridColumn TItem="SelleViewModel" TextAlign="TextAlign.Center" Property="Number" Width="100px" Title="Номер" />
            <RadzenGridColumn TItem="SelleViewModel" TextAlign="TextAlign.Center" Title="Дата">
                <Template Context="item">@item.Date.ToString("dd-MM-yyyy hh:mm")</Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="SelleViewModel" TextAlign="TextAlign.Center" Property="Unit" Title="Подразделение" />
            <RadzenGridColumn TItem="SelleViewModel" TextAlign="TextAlign.Center" Property="Date" Title="Клиент" />
            <RadzenGridColumn TItem="SelleViewModel" TextAlign="TextAlign.Center" Property="Cash" Title="Цена" />
            <RadzenGridColumn TItem="SelleViewModel" TextAlign="TextAlign.Center" Width="200px">
                <Template Context="item">
                    <RadzenButton Click=@(_ => { }) Text="Информация" Size="ButtonSize.Small" ButtonStyle="ButtonStyle.Secondary"/>
                    <RadzenButton Click=@(_ => PrintSaleAsync(item.Id)) Text="Этикетка" Size="ButtonSize.Small" ButtonStyle="ButtonStyle.Secondary"/>
                </Template>
            </RadzenGridColumn>
        </Columns>
    </RadzenGrid>
</LoadingContent>

@code
{
    [CascadingParameter] public IModalService Modal { get; set; }
    private List<Guid> _roles = new();
    private List<SelleViewModel> _data;
    private bool _loading = true;

    protected override async Task OnInitializedAsync()
    {
        _loading = false;
        _roles = await AuthService.GetCurrentRoles();
        await GetRequest.InvokeAsync<GetAllSellsSuccessHttpResponse>($"storage/Sells?InstanceId={await SessionProvider.GetCurrentInstanceId()}",
            resp =>
            {
                if (resp.IsSuccess()) {_data = resp.Success.Data;}
                else
                {
                    Console.WriteLine(resp.Error);
                    NavigationManager.NavigateTo("/instance-view");
                }
            });
        _loading = true;
    }

    private async Task NewSelle()
    {
        var modal = Modal.Show<SellesCreateForm>("Новая продажа");
        await modal.Result;
        _loading = false;
        await GetRequest.InvokeAsync<GetAllSellsSuccessHttpResponse>($"storage/Sells?InstanceId={await SessionProvider.GetCurrentInstanceId()}",
            resp =>
            {
                if (resp.IsSuccess()) {_data = resp.Success.Data;}
                else
                {
                    Console.WriteLine(resp.Error);
                    NavigationManager.NavigateTo("/instance-view");
                }
            });
        _loading = true;
    }

    private async Task PrintSaleAsync(Guid saleId)
    {
        await PrintingService.Print($"https://192.168.100.125/docs/StorageItems/SelleDocument/{saleId}");
    }
}
