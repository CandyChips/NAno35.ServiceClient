@using Nano35.WebClient.Services
@using Nano35.HttpContext.instance
@inject HttpClient HttpClient
@inject IRequestManager RequestManager
@inject IInstanceService InstanceService

<EditForm Model="@Model"
          OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />

    <InputField Title="Название подразделения*">
        <Controls>
            <RadzenTextBox Style="width: 100%;" 
                           Placeholder="..."
                           @bind-Value="Model.Name"/>
        </Controls>
    </InputField>

    <InputField Title="Адресс*">
        <Controls>
            <RadzenTextBox Style="width: 100%;" 
                           Placeholder="..."
                           @bind-Value="Model.Address"/>
        </Controls>
    </InputField>

    <InputField Title="Формат работы">
        <Controls>
            <RadzenTextBox Style="width: 100%;" 
                           Placeholder="..."
                           @bind-Value="Model.WorkingFormat"/>
        </Controls>
    </InputField>

    <InputField Title="Номер телефона*">
        <Controls>
            <RadzenTextBox Style="width: 100%;" 
                           Placeholder="..."
                           @bind-Value="Model.Phone"/>
        </Controls>
    </InputField>

    <InputField Title="Тип подразделения*">
        <Controls>
            <RadzenDropDown Data=@(_types.Select(a => new {Id = a.Id, Name = a.Name}))
                            TextProperty="Name"
                            ValueProperty="Id"
                            TValue="Guid"
                            @bind-Value="Model.UnitTypeId"
                            style="width: 100%"
                            Placeholder="Выберите статус клиента..."/>
        </Controls>
    </InputField>
                
    @if (!string.IsNullOrEmpty(Error))
    {
        <div class="alert alert-danger mt-3 mb-0">@Error</div>
    }
    
    <RadzenButton type="submit"
                  Text="Создать"
                  ButtonStyle="ButtonStyle.Primary"
                  Style="width: 100%" />
</EditForm>

@code
{
    [Parameter] public CreateUnitHttpBody Model { get; set; }
    [Parameter] public EventCallback FormSubmitted { get; set; }
    [Parameter] public string Error { get; set; }

    private List<UnitTypeViewModel> _types = new List<UnitTypeViewModel>();
        
    protected override async Task OnInitializedAsync()
    {
        var request = new GetAllUnitTypesHttpQuery();
        _types = (await new GetAllUnitTypesRequest(RequestManager, HttpClient, request).Send()).Data.ToList();
    }

    private async Task HandleValidSubmit()
    {
        await FormSubmitted.InvokeAsync();
    }
}
