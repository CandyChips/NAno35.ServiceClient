@using Microsoft.AspNetCore.Authorization
@using Nano35.HttpContext.storage
@using Nano35.WebClient.Services
@attribute [Authorize]
@layout InstanceLayout
@page "/instance/cancellations"
@inject IRequestManager RequestManager
@inject IComingsService ComingsService
@inject ISessionProvider SessionProvider
@inject HttpClient HttpClient

@if (_loading)
{
    <div class="d-flex justify-content-center" style="margin-top: 5rem">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden"></span>
        </div>
    </div>
}
else
{
    <RadzenHeading Text="Списания"/>
    
    <RadzenButton Click=@(_ => NewCancellation()) 
                  Text="Создать"
                  Style="margin: 1rem 0;"
                  ButtonStyle="ButtonStyle.Primary"/>
    
    <RadzenGrid AllowFiltering="true" 
                FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive"
                FilterMode="FilterMode.Advanced" 
                AllowPaging="true"
                PageSize="10"
                AllowSorting="true" 
                Data="@_data"
                TItem="CancellationViewModel">
        <Columns>
            <RadzenGridColumn TItem="CancellationViewModel"
                              Property="Number" 
                              Title="Номер" />
            <RadzenGridColumn TItem="CancellationViewModel" 
                              Property="Date" 
                              Title="Дата" />
            <RadzenGridColumn TItem="CancellationViewModel" 
                              Property="Unit" 
                              Title="Подразделение" />
            <RadzenGridColumn TItem="CancellationViewModel"
                                          Filterable="false"
                                          Title="Дата">
                <Template Context="item">
                    @item.Date.ToString("dd-MM-yyyy")
                </Template>
            </RadzenGridColumn>
        </Columns>
    </RadzenGrid>
}

@code
{
    private IEnumerable<CancellationViewModel> _data;
    private bool _loading = true;
    [CascadingParameter] public IModalService Modal { get; set; }

    protected override async Task OnInitializedAsync()
    {
        _data = (await (new GetAllCancellationsRequest(
            RequestManager, 
            HttpClient, 
            new GetAllCancellationsHttpQuery() 
            {InstanceId = await SessionProvider.GetCurrentInstanceId()})).Send()).Data;
        _loading = false;
    }

    private void NewCancellation()
    {
        Modal.Show<CancellationsCreate>("Новое списание");
    }

}
