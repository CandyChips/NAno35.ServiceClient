@using Microsoft.AspNetCore.Authorization
@using Nano35.HttpContext.storage
@using Nano35.WebClient.Helpers
@using Nano35.WebClient.Services
@using Append.Blazor.Printing
@attribute [Authorize]
@layout InstanceLayout
@page "/instance/storage/coming"
@inject IRequestManager RequestManager
@inject ISessionProvider SessionProvider
@inject HttpClient HttpClient
@inject IAuthService AuthService
@inject IPrintingService PrintingService

<LoadingContent IsLoaded="_loading">
    <RadzenHeading Text="Оприходования"/>
    @if (_roles.Contains(RolesHelper.Storage) || _roles.Contains(RolesHelper.Admin))
    {
        <RadzenButton Click=@(_ => NewComing()) 
                      Text="Создать"
                      Style="margin: 1rem 0;"
                      ButtonStyle="ButtonStyle.Primary"/>
    }
    <RadzenGrid EmptyText="Нет оприходований."
                Data="@_data"
                TItem="ComingViewModel">
        <Columns>
            <RadzenGridColumn TItem="ComingViewModel" 
                              Property="Number"
                              Title="Номер" 
                              Width="70px"/>
            
            <RadzenGridColumn TItem="ComingViewModel"
                              Title="Дата">
                <Template Context="item">
                    @item.Date.ToString("dd-MM-yyyy hh:mm")
                </Template>
            </RadzenGridColumn>
            
            <RadzenGridColumn TItem="ComingViewModel"
                              Property="Unit" 
                              Title="Подразделение" />
            
            <RadzenGridColumn TItem="ComingViewModel"
                              Property="Client" 
                              Title="Клиент" />
            
            <RadzenGridColumn TItem="ComingViewModel"
                              Width="130px"
                              Title="Цена">
                <Template Context="item">
                    @item.Cash руб.
                </Template>
            </RadzenGridColumn>
            
            <RadzenGridColumn TItem="ComingViewModel"
                              TextAlign="TextAlign.Center">
                <Template Context="item">
                    <RadzenButton Click=@(_ => OpenComing(item)) 
                                  Text="Информация"
                                  Size="ButtonSize.Small"
                                  Style="margin: 1rem 0;"
                                  ButtonStyle="ButtonStyle.Secondary"/>
                    <RadzenButton Click=@(_ => PrintSaleAsync(item.Id))
                                  Text="Этикетка"
                                  Size="ButtonSize.Small"
                                  Style="margin: 1rem 0;"
                                  ButtonStyle="ButtonStyle.Secondary"/>
                </Template>
            </RadzenGridColumn>
            
        </Columns>
    </RadzenGrid>
</LoadingContent>

@code
{
    private IEnumerable<ComingViewModel> _data;
    private bool _loading;
    [CascadingParameter] public IModalService Modal { get; set; }
    private List<Guid> _roles = new();

    protected override async Task OnInitializedAsync()
    {
        _loading = false;
        _roles = await AuthService.GetCurrentRoles();
        _data = await GetAllComings();
        _loading = true;
    }
    
    private async Task<IEnumerable<ComingViewModel>> GetAllComings() => (await new HttpGetRequest<GetAllComingsSuccessHttpResponse>(HttpClient, $"{RequestManager.StorageServer}/Comings?InstanceId={await SessionProvider.GetCurrentInstanceId()}&UnitId={await SessionProvider.GetCurrentUnitId()}").GetAsync()).Data;


    private async Task NewComing()
    {
        var modalOpts = new ModalOptions()
        {
            DisableBackgroundCancel = true, FocusFirstElement = true
        };
        var modal = Modal.Show<ComingsCreate>("Новое оприходование", modalOpts);
        await modal.Result;
        _loading = false;
        _data = await GetAllComings();
        _loading = true;
    }

    private async Task OpenComing(ComingViewModel coming)
    {
        var modalOpts = new ModalOptions()
        {
            DisableBackgroundCancel = true, FocusFirstElement = true
        };
        var parameters = new ModalParameters();
        parameters.Add(nameof(ComingsDetails.Coming), coming);
        var modal = Modal.Show<ComingsDetails>($"Оприходование", parameters, modalOpts);
        await modal.Result;
        _loading = false;
        _data = await GetAllComings();
        _loading = true;
    }

    private async Task PrintSaleAsync(Guid saleId)
    {
        await PrintingService.Print($"https://192.168.100.125/docs/StorageItems/SelleDocument/{saleId}");
    }
}
