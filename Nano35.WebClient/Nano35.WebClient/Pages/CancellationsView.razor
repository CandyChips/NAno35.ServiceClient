@using Microsoft.AspNetCore.Authorization
@using Nano35.Contexts.Http.storage
@using Nano35.WebClient.Services
@attribute [Authorize]
@layout InstanceLayout
@page "/instance/storage/cancellations"
@inject RequestManager RequestManager
@inject ISessionProvider SessionProvider
@inject HttpClient HttpClient
@inject NotificationService NotificationService
@inject NavigationManager NavigationManager
@inject HttpGet GetRequest

<LoadingContent IsLoaded="_loading">
    <RadzenHeading Text="Списания"/>
    <RadzenButton Click="@(_ => NewCancellation())" 
                  Text="Создать"
                  Style="margin: 1rem 0;"
                  ButtonStyle="ButtonStyle.Primary"/>
    <RadzenGrid AllowFiltering="true" 
                FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive"
                FilterMode="FilterMode.Advanced" 
                AllowPaging="true"
                PageSize="10"
                AllowSorting="true" 
                Data="@_data"
                TItem="CancellationViewModel">
        <Columns>
            <RadzenGridColumn TItem="CancellationViewModel"
                              Property="Number" 
                              Filterable="false"
                              Sortable="false"
                              TextAlign="TextAlign.Center"
                              Title="Номер" />
            <RadzenGridColumn TItem="CancellationViewModel" 
                              Property="Date" 
                              Filterable="false"
                              Sortable="false"
                              TextAlign="TextAlign.Center"
                              Title="Дата" />
            <RadzenGridColumn TItem="CancellationViewModel" 
                              Property="Unit" 
                              Filterable="false"
                              Sortable="false"
                              TextAlign="TextAlign.Center"
                              Title="Подразделение" />
            <RadzenGridColumn TItem="CancellationViewModel"
                              Filterable="false"
                              Sortable="false"
                              Title="Дата">
                <Template Context="item">
                    @item.Date.ToString("dd-MM-yyyy hh:mm")
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="CancellationViewModel" 
                              Filterable="false"
                              Sortable="false"
                              TextAlign="TextAlign.Center"
                              Width="130px">
                <Template Context="item">
                    <RadzenButton Click=@(_ => OpenCancellation(item)) 
                                  Text="Информация"
                                  Size="ButtonSize.Small"
                                  Style="margin: 1rem 0;"
                                  ButtonStyle="ButtonStyle.Primary"/>
                </Template>
            </RadzenGridColumn>
        </Columns>
    </RadzenGrid>
</LoadingContent>

@code
{
    private IEnumerable<CancellationViewModel> _data;
    private bool _loading = true;

    [CascadingParameter]
    public IModalService Modal { get; set; }

    [CascadingParameter]
    BlazoredModalInstance ModalInstance { get; set; }


    protected override async Task OnInitializedAsync()
    {
        _loading = false;
        _data = await GetAllCancellations();
        _loading = true;
    }

    private async Task<IEnumerable<CancellationViewModel>> GetAllCancellations()
    {
        var data = new List<CancellationViewModel>();
        
        await GetRequest.InvokeAsync<GetAllCancellationsSuccessHttpResponse>($"Cancellations?InstanceId={await SessionProvider.GetCurrentInstanceId()}&UnitId={await SessionProvider.GetCurrentUnitId()}",
            resp =>
            {
                if (resp.IsSuccess()) {data = resp.Success.Data;}
                else
                {
                    Console.WriteLine(resp.Error);
                    NavigationManager.NavigateTo("/instance-view");
                }
            });
        return data;
        
    }
    private async Task NewCancellation()
    {
        var modalOpts = new ModalOptions()
        {
            DisableBackgroundCancel = true, FocusFirstElement = true
        };
        var modal = Modal.Show<CancellationsCreateForm>("Новое списание", modalOpts);
        await modal.Result;
        _loading = false;
        _data = await GetAllCancellations();
        _loading = true;
    }

    private async Task OpenCancellation(CancellationViewModel coming)
    {
        var parameters = new ModalParameters();
        parameters.Add(nameof(CancellationsDetails.Cancellation), coming);
        var modal = Modal.Show<CancellationsDetails>($"Списание", parameters);
        await modal.Result;
        _loading = false;
        _data = await GetAllCancellations();
        _loading = true;
    }
}
