@using Nano35.WebClient.Services
@using Nano35.HttpContext.instance
@using Blazored.FluentValidation
@using Nano35.Contracts.Instance.Models
@using Nano35.HttpContext.Repair
@using Nano35.HttpContext.storage
@inject HttpClient HttpClient
@inject IRequestManager RequestManager
@inject ISessionProvider SessionProvider

<EditForm Model="@Model"
          OnValidSubmit="Create">
    <FluentValidationValidator/>
    <ValidationSummary/>
    @if (_isLoaded)
    {
        <InputField Title="Клиент*">
            <Controls>
                <div style="display: flex; width: 100%;">
                    <RadzenDropDown Data=@(_clients.Select(a => new { a.Id, Name = $"{a.Name} - {a.Phone}" }))
                                    TextProperty="Name"
                                    ValueProperty="Id"
                                    TValue="Guid"
                                    @bind-Value="Model.ClientId"
                                    Style="width: 100%;"
                                    Placeholder="Выберите клиента..."
                                    FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive"
                                    FilterOperator="StringFilterOperator.Contains"
                                    AllowFiltering="true"/>
                    <RadzenButton Click=@(_ => OpenCreateClient())
                                  Text="Добавить"
                                  ButtonStyle="ButtonStyle.Secondary"/>
                </div>
            </Controls>
        </InputField>
        
        <InputField Title="Устройство*">
            <Controls>
                <div style="display: flex; width: 100%;">
                    <RadzenDropDown Data=@(_articles.Select(a => new { a.Id, Name = $"{a.Brand} - {a.Model}" }))
                                    TextProperty="Name"
                                    ValueProperty="Id"
                                    TValue="Guid"
                                    @bind-Value="Model.DeviceId"
                                    Style="width: 100%;"
                                    Placeholder="Выберите артикул..."
                                    FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive"
                                    FilterOperator="StringFilterOperator.Contains"
                                    AllowFiltering="true"/>
                    <RadzenButton Click=@(_ => OpenCreateArticle())
                                  Text="Добавить"
                                  ButtonStyle="ButtonStyle.Secondary"/>
                </div>
            </Controls>
            <Validation>
                <ValidationMessage For="@(() => Model.DeviceId)" />
            </Validation>
        </InputField>
        
        <InputField Title="SN/IMEI">
            <Controls>
                <RadzenTextBox style="width: 100%;"
                               Placeholder="Введите серийный номер"
                               @bind-Value="Model.Serial"/>
            </Controls>
            <Validation>
                <ValidationMessage For="@(() => Model.Serial)" />
            </Validation>
        </InputField>

        <InputField Title="Внешний вид*">
            <Controls>
                <div style="width: 100%; display: flex;">
                    <RadzenTextBox Style="width: 100%;"
                                   Placeholder="Опишите внешний вид устройства"
                                   @bind-Value="Model.Condition"/>
                    <RadzenButton Text="Царапины"
                                  Click="@(_ => { Model.Condition += "Царапины "; })"
                                  ButtonStyle="ButtonStyle.Secondary"/>
                    <RadzenButton Text="Потертости"
                                  Click="@(_ => { Model.Condition += "Потертости "; })"
                                  ButtonStyle="ButtonStyle.Secondary"/>
                </div>
            </Controls>
            <Validation>
                <ValidationMessage For="@(() => Model.Condition)" />
            </Validation>
        </InputField>

        <InputField Title="Неисправность со слов клиента*">
            <Controls>
                <RadzenTextBox Style="width: 100%;"
                               Placeholder="Опишите неисправность со слов клиента"
                               @bind-Value="Model.Trouble"/>
            </Controls>
            <Validation>
                <ValidationMessage For="@(() => Model.Trouble)" />
            </Validation>
        </InputField>
        
        <InputField Title="Комплектация*">
            <Controls>
                <div style="width: 100%; display: flex;">
                    <RadzenTextBox Placeholder="Опишите Комплектацию"
                                   Style="width: 100%;"
                                   @bind-Value="Model.Complication"/>
                    <RadzenButton Text="ЗУ"
                                  Click="@(_ => { Model.Complication += "З.У. "; })"
                                  ButtonStyle="ButtonStyle.Secondary"/>
                    <RadzenButton Text="Блок питания"
                                  Click="@(_ => { Model.Complication += "Блок питания "; })"
                                  ButtonStyle="ButtonStyle.Secondary"/>
                </div>
            </Controls>
            <Validation>
                <ValidationMessage For="@(() => Model.Complication)" />
            </Validation>
        </InputField>
    }
    else
    {
        <div class="d-flex justify-content-center" style="margin-top: 5rem; margin-bottom: 5rem">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden"></span>
            </div>
        </div>
    }
    @if (!string.IsNullOrEmpty(Error))
    {
        <div class="alert alert-danger mt-3 mb-0">@Error</div>
    }

    <RadzenButton type="submit"
                  Text="Создать"
                  ButtonStyle="ButtonStyle.Primary"
                  Style="width: 100%"/>
</EditForm>

@code
{
    [Parameter] public CreateRepairOrderBody Model { get; set; }
    [Parameter] public EventCallback FormSubmitted { get; set; }
    [Parameter] public string Error { get; set; }
    [CascadingParameter] public IModalService Modal { get; set; }
    [CascadingParameter] BlazoredModalInstance ModalInstance { get; set; }

    private bool _isLoaded;
    private List<ClientViewModel> _clients = new();
    private List<ArticleViewModel> _articles = new();

    protected override async Task OnInitializedAsync()
    {
        _isLoaded = false;
        _clients = await LoadClients();
        _articles = await LoadArticles();
        _isLoaded = true;
    }

    private async Task Create()
    {
        Model.UnitId = await SessionProvider.GetCurrentUnitId();
        await FormSubmitted.InvokeAsync();
        await ModalInstance.CloseAsync();
    }

    private async Task OpenCreateClient()
    {
        var parameters = new ModalParameters();
        var modal = Modal.Show<ClientsCreate>($"Новый клиент", parameters);
        await modal.Result;
        _isLoaded = false;
        _clients = await LoadClients();
        _isLoaded = true;
    }

    private async Task OpenCreateArticle()
    {
        var parameters = new ModalParameters();
        parameters.Add(nameof(ArticlesCreate.IsExpandedView), false);
        var modal = Modal.Show<ArticlesCreate>($"Новое устройство", parameters);
        await modal.Result;
        _isLoaded = false;
        _articles = await LoadArticles();
        _isLoaded = true;
    }

    private async Task<List<ClientViewModel>> LoadClients() =>
        (await new HttpGetRequest<GetAllClientsHttpResponse>(HttpClient, $"{RequestManager.InstanceServer}/Clients?InstanceId={await SessionProvider.GetCurrentInstanceId()}&ClientTypeId={Guid.Parse("5E9FFC4F-4A52-4C49-0CF2-08D8D1D70D30")}").GetAsync()).Data.ToList();

    private async Task<List<ArticleViewModel>> LoadArticles() =>
        (await new HttpGetRequest<GetAllArticlesSuccessHttpResponse>(HttpClient, $"{RequestManager.StorageServer}/Articles?InstanceId={await SessionProvider.GetCurrentInstanceId()}").GetAsync()).Data.ToList();
}
