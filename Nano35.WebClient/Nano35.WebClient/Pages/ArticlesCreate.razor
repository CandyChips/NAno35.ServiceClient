@using Nano35.WebClient.Services
@using Nano35.HttpContext.storage
@inject HttpClient HttpClient
@inject IRequestManager RequestManager
@inject ISessionProvider SessionProvider
@inject IAuthService AuthService

<div style="width: 40rem;">
    <ArticlesForm FormSubmitted="Submit"
                  Model="@_model"
                  Error="@Error"
                  IsExpandedView="@IsExpandedView"/>
</div>

@code
{
    [Parameter] public bool IsExpandedView { get; set; } = true;
    private CreateArticleHttpBody _model = new CreateArticleHttpBody();
    private string Error { get; set; } = "";
    
    private async Task Submit()
    {
        try
        {
            await new CreateArticleRequest(RequestManager, HttpClient, _model).Send();
        }
        catch (Exception e)
        {
            Error = e.Message;
        }
    }
    
    protected override async Task OnInitializedAsync()
    {
        _model = new CreateArticleHttpBody
        {
            NewId = Guid.NewGuid(),
            InstanceId = await SessionProvider.GetCurrentInstanceId(),
            Specs = new List<SpecHttpContext>()
        };
    }
}