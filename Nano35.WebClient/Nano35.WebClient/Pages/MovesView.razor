@using Microsoft.AspNetCore.Authorization
@using Nano35.Contexts.Http.storage
@using Nano35.WebClient.Services
@attribute [Authorize]
@layout InstanceLayout
@page "/instance/storage/moves"
@inject RequestManager RequestManager
@inject ISessionProvider SessionProvider
@inject HttpClient HttpClient
@inject NotificationService NotificationService
@inject NavigationManager NavigationManager
@inject HttpGet GetRequest

<LoadingContent IsLoaded="_loading">
    <RadzenHeading Text="Перемещения"/>
    <RadzenButton Click=@(_ => NewMove()) Text=" Создать" Style="margin: 1rem 0;" ButtonStyle="ButtonStyle.Primary"/>
    <RadzenTabs>
        <Tabs>
            <RadzenTabsItem Text="Проведенные">
                <RadzenGrid AllowPaging="true"
                            PageSize="10"
                            Data="@_data"
                            EmptyText="Нет проведенных оприходований"
                            TItem="MoveViewModel">
                    <Columns>
                        <RadzenGridColumn TItem="MoveViewModel" TextAlign="TextAlign.Center" Property="Number" Title="Номер" Width="70px" />
                        <RadzenGridColumn TItem="MoveViewModel" TextAlign="TextAlign.Center" Property="Date" Title="Дата" />
                        <RadzenGridColumn TItem="MoveViewModel" TextAlign="TextAlign.Center" Property="ToUnit" Title="Подразделение получатель" />
                        <RadzenGridColumn TItem="MoveViewModel" TextAlign="TextAlign.Center" Property="FromUnit" Title="Подразделение отправитель" />
                        <RadzenGridColumn TItem="MoveViewModel" TextAlign="TextAlign.Center" Width="130px">
                            <Template Context="item">
                                <RadzenButton Click=@(_ => OpenMove(item)) Text="Информация" Size="ButtonSize.Small" ButtonStyle="ButtonStyle.Primary"/>
                            </Template>
                        </RadzenGridColumn>
                    </Columns>
                </RadzenGrid>
            </RadzenTabsItem>
            <RadzenTabsItem Text="Ожидают проведения">
                <RadzenGrid AllowPaging="true"
                            PageSize="10"
                            Data="@_data"
                            EmptyText="Нет ожидающих проведения оприходований"
                            TItem="MoveViewModel">
                    <Columns>
                        <RadzenGridColumn TItem="MoveViewModel" TextAlign="TextAlign.Center" Property="Number" Title="Номер" Width="70px" />
                        <RadzenGridColumn TItem="MoveViewModel" TextAlign="TextAlign.Center" Property="Date" Title="Дата" />
                        <RadzenGridColumn TItem="MoveViewModel" TextAlign="TextAlign.Center" Property="ToUnit" Title="Подразделение получатель" />
                        <RadzenGridColumn TItem="MoveViewModel" TextAlign="TextAlign.Center" Property="FromUnit" Title="Подразделение отправитель" />
                        <RadzenGridColumn TItem="MoveViewModel" TextAlign="TextAlign.Center" Width="130px">
                            <Template Context="item">
                                <RadzenButton Click=@(_ => OpenMoveCheck(item)) Text="Провести" Size="ButtonSize.Small" ButtonStyle="ButtonStyle.Primary"/>
                                <RadzenButton Click=@(_ => OpenMove(item)) Text="Информация" Size="ButtonSize.Small" ButtonStyle="ButtonStyle.Secondary"/>
                            </Template>
                        </RadzenGridColumn>
                    </Columns>
                </RadzenGrid>
            </RadzenTabsItem>
        </Tabs>
    </RadzenTabs>
</LoadingContent>

@code
{
    private List<MoveViewModel> _data;
    private bool _loading;
    [CascadingParameter] public IModalService Modal { get; set; }

    protected override async Task OnInitializedAsync()
    {
        _loading = false;
        _data = await GetAllMoves();
        _loading = true;
    }

    private async Task<List<MoveViewModel>> GetAllMoves()
    {
        var data = new List<MoveViewModel>();
        await GetRequest.InvokeAsync<GetAllMovesSuccessHttpResponse>($"storage/Moves?InstanceId={await SessionProvider.GetCurrentInstanceId()}",
            resp =>
            {
                if (resp.IsSuccess()) {data = resp.Success.Data;}
                else
                {
                    Console.WriteLine(resp.Error);
                    NavigationManager.NavigateTo("/instance-view");
                }
            });
        return data;
    }
    
    private async Task NewMove()
    {
        var modal = Modal.Show<MovesCreateForm>("Новое списание");
        await modal.Result;
        _loading = false;
        _data = await GetAllMoves();
        _loading = true;
    }

    private async Task OpenMove(MoveViewModel value)
    {
        var parameters = new ModalParameters();
        parameters.Add(nameof(MovesDetails.Move), value);
        var modal = Modal.Show<MovesDetails>($"Перемещение", parameters);
        await modal.Result;
        _loading = false;
        _data = await GetAllMoves();
        _loading = true;
    }

    private async Task OpenMoveCheck(MoveViewModel value)
    {
        var parameters = new ModalParameters();
        parameters.Add(nameof(MovesCheck.Move), value);
        var modal = Modal.Show<MovesCheck>($"Перемещение", parameters);
        await modal.Result;
        _loading = false;
        _data = await GetAllMoves();
        _loading = true;
    }
}
