@using Microsoft.AspNetCore.Authorization
@using Nano35.HttpContext.storage
@using Nano35.WebClient.Services
@attribute [Authorize]
@layout InstanceLayout
@page "/instance/storage/cancellations"
@inject IRequestManager RequestManager
@inject ISessionProvider SessionProvider
@inject HttpClient HttpClient

<LoadingContent IsLoaded="_loading">
    <RadzenHeading Text="Списания"/>
    <RadzenButton Click="@(_ => NewCancellation())" 
                  Text="Создать"
                  Style="margin: 1rem 0;"
                  ButtonStyle="ButtonStyle.Primary"/>
    <RadzenGrid AllowFiltering="true" 
                FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive"
                FilterMode="FilterMode.Advanced" 
                AllowPaging="true"
                PageSize="10"
                AllowSorting="true" 
                Data="@_data"
                TItem="CancellationViewModel">
        <Columns>
            <RadzenGridColumn TItem="CancellationViewModel"
                              Property="Number" 
                              Filterable="false"
                              Sortable="false"
                              Title="Номер" />
            <RadzenGridColumn TItem="CancellationViewModel" 
                              Property="Date" 
                              Filterable="false"
                              Sortable="false"
                              Title="Дата" />
            <RadzenGridColumn TItem="CancellationViewModel" 
                              Property="Unit" 
                              Filterable="false"
                              Sortable="false"
                              Title="Подразделение" />
            <RadzenGridColumn TItem="CancellationViewModel"
                              Filterable="false"
                              Sortable="false"
                              Title="Дата">
                <Template Context="item">
                    @item.Date.ToString("dd-MM-yyyy hh:mm")
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="CancellationViewModel" 
                              Filterable="false"
                              Sortable="false"
                              Width="130px">
                <Template Context="item">
                    <RadzenButton Click=@(_ => OpenCancellation(item)) 
                                  Text="Информация"
                                  Size="ButtonSize.Small"
                                  Style="margin: 1rem 0;"
                                  ButtonStyle="ButtonStyle.Primary"/>
                </Template>
            </RadzenGridColumn>
        </Columns>
    </RadzenGrid>
</LoadingContent>

@code
{
    private IEnumerable<CancellationViewModel> _data;
    private bool _loading = true;

    [CascadingParameter]
    public IModalService Modal { get; set; }

    [CascadingParameter]
    BlazoredModalInstance ModalInstance { get; set; }


    protected override async Task OnInitializedAsync()
    {
        _loading = false;
        _data = await GetAllCancellations();
        _loading = true;
    }

    private async Task<IEnumerable<CancellationViewModel>> GetAllCancellations() =>
        (await new HttpGetRequest<GetAllCancellationsSuccessHttpResponse>(HttpClient, $"{RequestManager.StorageServer}/Cancellations?InstanceId={await SessionProvider.GetCurrentInstanceId()}&UnitId={await SessionProvider.GetCurrentUnitId()}").GetAsync()).Data;

    private async Task NewCancellation()
    {
        var modal = Modal.Show<CancellationsCreate>("Новое списание");
        await modal.Result;
        _data = await GetAllCancellations();
    }

    private async Task OpenCancellation(CancellationViewModel coming)
    {
        var parameters = new ModalParameters();
        parameters.Add(nameof(CancellationsDetails.Cancellation), coming);
        var modal = Modal.Show<CancellationsDetails>($"Списание", parameters);
        await modal.Result;
        _data = await GetAllCancellations();
    }
}
