@using Nano35.WebClient.Services
@using Nano35.HttpContext.instance
@inject HttpClient HttpClient
@inject IRequestManager RequestManager
@inject ISessionProvider SessionProvider

<ClientForm FormSubmitted="Submit"
            Model="_model" 
            Error="@Error"/>

@code
{
    private CreateClientHttpBody _model = new CreateClientHttpBody
    {
        NewId = Guid.NewGuid(),
        InstanceId = Guid.Empty
    };
    private string Error { get; set; }
    
    private async Task Submit()
    {
        try
        {
            await new CreateClientRequest(RequestManager, HttpClient, _model).Send();
        }
        catch (Exception e)
        {
            Error = e.Message;
        }
    }
    
    protected override async Task OnInitializedAsync()
    {
        _model = new CreateClientHttpBody
        {
            NewId = Guid.NewGuid(),
            InstanceId = await SessionProvider.GetCurrentInstanceId()
        };
    }
}
