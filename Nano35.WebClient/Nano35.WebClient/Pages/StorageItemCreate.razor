@using Nano35.WebClient.Services
@using Nano35.HttpContext.storage
@using Nano35.HttpContext.Repair

@inject HttpClient HttpClient
@inject IRequestManager RequestManager
@inject ISessionProvider SessionProvider

<div style="width: 40rem;">
    <StorageItemForm  FormSubmitted="SendCreateStorageItemRequest"
                       Model="_model" 
                       Error="@Error"/>
</div>

@code
{
    protected override async Task OnInitializedAsync()
    {
        _model = new CreateStorageItemHttpBody
        {
            NewId = Guid.NewGuid(),
            InstanceId = await SessionProvider.GetCurrentInstanceId(),
        };
    }
    
    private CreateStorageItemHttpBody _model = new CreateStorageItemHttpBody
    {
        NewId = Guid.NewGuid(),
        InstanceId = Guid.Empty,
    };
    
    private string Error { get; set; }
    
    private async Task SendCreateStorageItemRequest()
    {
        try
        {             
            await new CreateStorageItemRequest(RequestManager, HttpClient, _model).Send();
        }
        catch (Exception e)
        {
            Error = e.Message;
        }
    }
}