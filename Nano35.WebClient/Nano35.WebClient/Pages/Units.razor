@using Microsoft.AspNetCore.Authorization
@using Nano35.HttpContext.instance
@attribute [Authorize]
@layout InstanceLayout
@page "/instance/units"

@if (_loading)
{
    <div class="col-md-6 offset-md-3 mt-5">
        <div class="card">
            <h4 class="card-header">Загрузка</h4>
            <div class="card-body">
                ...
            </div>
        </div>
    </div>
}
else
{
    @if (!_serverAvailable)
    {
        <h4 class="card-header">Сервер недоступен</h4>
        <div class="card-body">
            Повторите попытку позднее
        </div>
    }
    else
    {
        <button class="btn btn-light"
                style="width: 100%"
                @onclick="() => { _isNewUnitDisplay = true; }">
            Создать
        </button>
        <Modal Title="Новое подразделение" 
               IsDisplay="@_isNewUnitDisplay">
            <Form>
                <UnitForm/>  
            </Form>
        </Modal>
        <br/>
        <Grid Items="@_data" TItem="UnitViewModel">    
            <Header>  
                <th>Название</th>
                <th>Адресс</th>
                <th>Телефон</th>
                <th>Формат работы</th>
            </Header>  
            <Row Context="item">  
                <td>@item.Name</td>
                <td>@item.Adress</td>
                <td>@item.Phone</td>
                <td>@item.WorkingFormat</td>
            </Row>  
        </Grid>
    }
}