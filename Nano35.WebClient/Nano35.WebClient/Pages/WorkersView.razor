@using Microsoft.AspNetCore.Authorization
@using Nano35.Contracts.Instance.Artifacts
@using Nano35.Contracts.Instance.Models
@using Nano35.HttpContext.instance
@using Nano35.WebClient.Helpers
@using Nano35.WebClient.Services
@using WorkerViewModel = Nano35.HttpContext.instance.WorkerViewModel
@attribute [Authorize]
@layout InstanceLayout
@inject NavigationManager NavigationManager;
@inject IInstanceService InstanceService;
@inject IRequestManager RequestManager
@inject ISessionProvider SessionProvider
@inject HttpClient HttpClient
@inject IAuthService AuthService
@page "/instance/workers"

@if (_loading)
{
    <div class="col-md-6 offset-md-3 mt-5">
        <div class="card">
            <h4 class="card-header">Загрузка</h4>
            <div class="card-body">
                ...
            </div>
        </div>
    </div>
}
else
{
    <RadzenHeading Text="Сотрудники"/>
    
    <RadzenButton Click=@(_ => NewWorker())
                  Text="Создать"
                  Style="margin: 1rem 0;"
                  ButtonStyle="ButtonStyle.Primary"/>
    <RadzenGrid Data="@_data"
                EmptyText="Добавте новых сотрудников..."
                TItem="WorkerViewModel">
        <Columns>
            <RadzenGridColumn TItem="WorkerViewModel"
                              Property="Name" 
                              Title="ФИО" />
            <RadzenGridColumn TItem="WorkerViewModel"
                              Property="Email" 
                              Title="Почта" 
                              Width="200px"/>
            <RadzenGridColumn TItem="WorkerViewModel"
                              Property="Phone" 
                              Title="Телефон"
                              Width="150px"/>
            <RadzenGridColumn TItem="WorkerViewModel"
                              Context="order"
                              Bubble="false"
                              TextAlign="TextAlign.Center">
                <Template Context="item">
                    <RadzenButton Text="Оповестить в мессенджере"
                                  Size="ButtonSize.Small"
                                  ButtonType="ButtonType.Button"
                                  ButtonStyle="ButtonStyle.Info"
                                  Click="@(_ => { })">
                    </RadzenButton>
                    @if (_roles.Contains(RolesHelper.Manager) || _roles.Contains(RolesHelper.Admin))
                    {
                        <RadzenButton Text="Выплатить ЗП"
                                      Size="ButtonSize.Small"
                                      ButtonType="ButtonType.Button"
                                      ButtonStyle="ButtonStyle.Info"
                                      Click="@(_ => NewWage(item))">
                        </RadzenButton>
                    }
                </Template>
            </RadzenGridColumn>
        </Columns>
    </RadzenGrid>
}

@code
{
    private IEnumerable<WorkerViewModel> _data;
    private bool _loading = true;
    [CascadingParameter] public IModalService Modal { get; set; }
    private List<Guid> _roles = new();
    
    protected override async Task OnInitializedAsync()
    {
        _roles = (await AuthService.GetCurrentRoles()).Roles;
        _data = (await new HttpRequestWrapper<GetAllWorkersHttpQuery, GetAllWorkersSuccessHttpResponse>(HttpClient,$"{RequestManager.InstanceServer}/Workers?InstanceId={await SessionProvider.GetCurrentInstanceId()}")
            .GetAsync()).Workers;
        _loading = false;
    }
    
    private async Task NewWorker()
    {
        var modal = Modal.Show<WorkerForm>("Новый Сотрудник");
        await modal.Result;
        _data = (await new HttpRequestWrapper<GetAllWorkersHttpQuery, GetAllWorkersSuccessHttpResponse>(HttpClient, $"{RequestManager.InstanceServer}/Workers?InstanceId={await SessionProvider.GetCurrentInstanceId()}").GetAsync()).Workers;
    }
    
    private async Task NewWage(WorkerViewModel user)
    {
        var parameters = new ModalParameters();
        parameters.Add(nameof(WorkersWageCreate.UserId), user.Id);
        var currentUnit = (await new GetUnitByIdRequest(RequestManager, HttpClient, new GetUnitByIdHttpQuery() {Id = await SessionProvider.GetCurrentUnitId()}).Send()).Data.Name;
        var modal = Modal.Show<WorkersWageCreate>($"Выплата заработной платы из кассы: {currentUnit}", parameters);
        await modal.Result;
        _data = (await new HttpRequestWrapper<GetAllWorkersHttpQuery, GetAllWorkersSuccessHttpResponse >(HttpClient,$"{RequestManager.InstanceServer}/Workers?InstanceId={await SessionProvider.GetCurrentInstanceId()}").GetAsync()).Workers;
    }
}
