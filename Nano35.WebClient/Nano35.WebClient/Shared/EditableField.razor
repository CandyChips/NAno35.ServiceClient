@if (_isEditable)
{
    <div class="LeftBlock">
        @Edit
    </div>
    <div class="RightBlock">
        <RadzenButton Click="@(_ => { _isEditable = false; OnSave.Invoke(); })"
                      Text="Сохранить изменения"
                      Size="ButtonSize.Small"
                      ButtonStyle="ButtonStyle.Primary"
                      Style="width: 90px;
                             padding-left: 0px;
                             padding-right: 0px;"/>
        <RadzenButton Click="@(_ => { _isEditable = false; OnCancel.Invoke(); })"
                      Text="Отменить"
                      Size="ButtonSize.Small"
                      ButtonStyle="ButtonStyle.Secondary"
                      Style="width: 90px;
                             padding-left: 0px;
                             padding-right: 0px;"/>
    </div>
}
else
{
    <div class="LeftBlock">
        @View
    </div>
    <div class="RightBlock" style="align-items: center">
        <RadzenButton Click="@(_ => { _isEditable = true; OnEdit.Invoke(); })"
                      Text="Изменить"
                      Size="ButtonSize.Small"
                      ButtonStyle="ButtonStyle.Secondary"/>
    </div>
}

<style>
    .LeftBlock {
        display: flex; 
        width: 60%; 
        align-items: center;
    }
    .RightBlock {
        display: flex; 
        float: right; 
        width: 40%; 
        display: flex;
    }
</style>

@code {
    [Parameter] public RenderFragment Edit { get; set; }
    [Parameter] public RenderFragment View { get; set; }
    [Parameter] public Action OnSave { get; set; }
    [Parameter] public Action OnCancel { get; set; }
    [Parameter] public Action OnEdit { get; set; }
    private bool _isEditable { get; set; }
}