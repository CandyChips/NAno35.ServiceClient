@using Microsoft.AspNetCore.Authorization
@using Nano35.HttpContext.storage
@using Nano35.WebClient.Services
@attribute [Authorize]
@layout InstanceLayout
@page "/instance/storage/sells"
@inject IRequestManager RequestManager
@inject ISessionProvider SessionProvider
@inject HttpClient HttpClient

@if (_loading)
{
    <div class="d-flex justify-content-center" style="margin-top: 5rem; margin-bottom: 5rem">
      <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden"></span>
      </div>
    </div>
}
else
{
    <RadzenHeading Text="Продажи"/>
    
    <RadzenButton Click=@(_ => NewSelle()) 
                  Text="Создать"
                  Style="margin: 1rem 0;"
                  ButtonStyle="ButtonStyle.Primary"/>
    
    <RadzenGrid AllowFiltering="true" 
                FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive"
                FilterMode="FilterMode.Advanced" 
                AllowPaging="true"
                PageSize="10"
                AllowSorting="true" 
                Data=@(_data)
                TItem="SelleViewModel">
        <Columns>
            <RadzenGridColumn TItem="SelleViewModel"
                              Property="Number" 
                              Title="Номер" />
            <RadzenGridColumn TItem="SelleViewModel"
                              Filterable="false"
                              Sortable="false"
                              Title="Дата">
                <Template Context="item">
                    @item.Date.ToString("dd-MM-yyyy hh:mm")
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="SelleViewModel" 
                              Property="Unit" 
                              Title="Подразделение" />
            <RadzenGridColumn TItem="SelleViewModel"
                              Property="Date" 
                              Title="Клиент" />
            <RadzenGridColumn TItem="SelleViewModel"
                              Property="Cash"
                              Title="Цена" />
            <RadzenGridColumn TItem="SelleViewModel" 
                              Filterable="false"
                              Sortable="false"
                              Width="130px">
                <Template Context="item">
                    <RadzenButton Click=@(_ => { }) 
                                  Text="Информация"
                                  Size="ButtonSize.Small"
                                  Style="margin: 1rem 0;"
                                  ButtonStyle="ButtonStyle.Primary"/>
                </Template>
            </RadzenGridColumn>
        </Columns>
    </RadzenGrid>
}

@code
{
    private IEnumerable<SelleViewModel> _data;
    private bool _loading = true;
    [CascadingParameter] public IModalService Modal { get; set; }

    protected override async Task OnInitializedAsync()
    {
        _data = (await new HttpGetRequest<GetAllSellsSuccessHttpResponse>(HttpClient, $"{RequestManager.StorageServer}/Sells?InstanceId={await SessionProvider.GetCurrentInstanceId()}").GetAsync()).Data;
        _loading = false;
    }

    private async Task NewSelle()
    {
        var modal = Modal.Show<SellesCreate>("Новая продажа");
        await modal.Result;
        _data = (await new HttpGetRequest<GetAllSellsSuccessHttpResponse>(HttpClient, $"{RequestManager.StorageServer}/Sells?InstanceId={await SessionProvider.GetCurrentInstanceId()}").GetAsync()).Data;
    }
}
