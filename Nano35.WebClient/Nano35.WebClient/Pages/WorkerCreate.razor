@using Nano35.WebClient.Services
@using Nano35.HttpContext.instance
@inject HttpClient HttpClient
@inject IRequestManager RequestManager
@inject ISessionProvider SessionProvider
@inject HealthService HealthService
@inject NavigationManager NavigationManager
@inject HttpPost PostRequest

<BoxedContent Width="40">
    <WorkerForm FormSubmitted="OnSubmit" Model="_model" Error="@Error"/>
</BoxedContent>

@code
{
    private CreateWorkerHttpBody _model = new();
    private string Error { get; set; }
    
    protected override async Task OnInitializedAsync()
    {
        _model = new CreateWorkerHttpBody
        {
            NewId = Guid.NewGuid(),
            InstanceId = await SessionProvider.GetCurrentInstanceId()
        };
    }
    
    private async Task OnSubmit()
    {
        try
        {
            await PostRequest.InvokeAsync<CreateWorkerHttpResponse, CreateWorkerHttpBody>(
                RequestManager.InstanceServer, $"Workers", _model,
                resp =>
                {
                    if (resp.IsSuccess()) {}
                    else
                    {
                        Console.WriteLine(resp.Error);
                        NavigationManager.NavigateTo("/instance-view");
                    }
                });
        }
        catch (Exception e)
        {
            Error = e.Message;
        }
    }
}
