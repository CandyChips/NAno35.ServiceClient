<div class="form-group">
    <b>@Title</b>
    <div class="input-group">
        @Controls
    </div>
    @Validation
</div>

@functions {
    [Parameter] public string Title { get; set; }
    [Parameter] public RenderFragment Controls { get; set; }
    [Parameter] public RenderFragment Validation { get; set; }
}