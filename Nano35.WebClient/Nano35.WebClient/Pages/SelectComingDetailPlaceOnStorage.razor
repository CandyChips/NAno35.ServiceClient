<InputText @bind-Value="PlaceOnStorage" 
            class="form-control" 
            placeholder="Введите название ячейки или выберите из используемых"/>
            
            
@code
{
    private string _value; 
    [Parameter] public string PlaceOnStorage 
    {
        get => _value;
        set
        {
            if (_value == value ) return;
            _value = value;
            PlaceOnStorageChanged.InvokeAsync(value);
        }
    }
    [Parameter] public EventCallback<string> PlaceOnStorageChanged { get; set; }

    private string SelectedPlaceOnStorage { get; set; }

    private async Task OnPlaceOnStorageChanged(ChangeEventArgs e)
    {
        SelectedPlaceOnStorage = e.Value?.ToString();
        await PlaceOnStorageChanged.InvokeAsync(SelectedPlaceOnStorage);
    }
}