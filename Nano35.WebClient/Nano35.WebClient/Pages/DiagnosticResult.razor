<RadzenTextArea  style="width: 100%" @bind-Value="Result" Placeholder="Введите результат диагностики"/>
<RadzenButton Click="@(() => Submit())" Text="Отправить" Style="display: flex;align-items: center; justify-content: center"/>

@code {
    
    [CascadingParameter] public IModalService Modal { get; set; }
    [CascadingParameter] BlazoredModalInstance ModalInstance { get; set; }
    private string Result { get; set; } = "В результате диагностики ";

    private async Task Submit()
    {
        await ModalInstance.CloseAsync(ModalResult.Ok(Result));
    }
}