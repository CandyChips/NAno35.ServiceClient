@using Microsoft.AspNetCore.Authorization
@using Nano35.Contexts.Http.storage
@using Nano35.WebClient.Services
@attribute [Authorize]
@layout InstanceLayout
@page "/instance/storage/moves"
@inject RequestManager RequestManager
@inject ISessionProvider SessionProvider
@inject HttpClient HttpClient
@inject NotificationService NotificationService
@inject NavigationManager NavigationManager
@inject HttpGet GetRequest

<LoadingContent IsLoaded="_loading">
    <RadzenHeading Text="Перемещения"/>
    <RadzenButton Click=@(_ => NewMove()) Text=" Создать" Style="margin: 1rem 0;" ButtonStyle="ButtonStyle.Primary"/>
    <RadzenGrid AllowPaging="true"
                PageSize="10"
                Data="@_data"
                TItem="MoveViewModel">
        <Columns>
            <RadzenGridColumn TItem="MoveViewModel" Property="Number" TextAlign="TextAlign.Center" Title="Номер" />
            <RadzenGridColumn TItem="MoveViewModel" Property="Date" TextAlign="TextAlign.Center" Title="Дата" />
            <RadzenGridColumn TItem="MoveViewModel" Property="ToUnit" TextAlign="TextAlign.Center" Title="Подразделение получатель" />
            <RadzenGridColumn TItem="MoveViewModel" Property="FromUnit" TextAlign="TextAlign.Center" Title="Подразделение отправитель" />
            <RadzenGridColumn TItem="MoveViewModel" Width="130px" TextAlign="TextAlign.Center">
                <Template Context="item">
                    <RadzenButton Click=@(_ => OpenMove(item)) Text="Информация" Size="ButtonSize.Small" Style="margin: 1rem 0;" ButtonStyle="ButtonStyle.Primary"/>
                </Template>
            </RadzenGridColumn>
        </Columns>
    </RadzenGrid>
</LoadingContent>

@code
{
    private List<MoveViewModel> _data;
    private bool _loading;
    [CascadingParameter] public IModalService Modal { get; set; }

    protected override async Task OnInitializedAsync()
    {
        _loading = false;
        _data = await GetAllMoves();
        _loading = true;
    }

    private async Task<List<MoveViewModel>> GetAllMoves()
    {
        var data = new List<MoveViewModel>();
        await GetRequest.InvokeAsync<GetAllMovesSuccessHttpResponse>($"Moves?InstanceId={await SessionProvider.GetCurrentInstanceId()}",
            resp =>
            {
                if (resp.IsSuccess()) {data = resp.Success.Data;}
                else
                {
                    Console.WriteLine(resp.Error);
                    NavigationManager.NavigateTo("/instance-view");
                }
            });
        return data;
    }
    
    private async Task NewMove()
    {
        var modal = Modal.Show<MovesCreateForm>("Новое списание");
        await modal.Result;
        _loading = false;
        _data = await GetAllMoves();
        _loading = true;
    }

    private async Task OpenMove(MoveViewModel value)
    {
        var parameters = new ModalParameters();
        parameters.Add(nameof(MovesDetails.Move), value);
        var modal = Modal.Show<MovesDetails>($"Перемещение", parameters);
        await modal.Result;
        _loading = false;
        _data = await GetAllMoves();
        _loading = true;
    }
}
